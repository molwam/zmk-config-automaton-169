#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zmk,led-widgets-dev = &leds;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <4>;


//             | SW01  | SW02  | SW03  |                   | SW03  | SW02  | SW01  |
//      | SW05 | SW06  | SW07  | SW08  | SW04  |   | SW04  | SW08  | SW07  | SW06  | SW05  | 
//      | SW09 | SW10  | SW11  | SW12  | SW13  |   | SW13  | SW12  | SW11  | SW10  | SW09  |
//                     | SW16  | SW15  | SW14  |   | SW14  | SW15  | SW16  |
        map = <
                RC(0,3) RC(0,2) RC(0,1)                    RC(0,6) RC(0,5) RC(0,4)
        RC(1,3) RC(1,2) RC(1,1) RC(1,0) RC(0,0)    RC(0,7) RC(1,7) RC(1,6) RC(1,5) RC(1,4)
        RC(2,3) RC(2,2) RC(2,1) RC(2,0) RC(3,3)    RC(3,4) RC(2,7) RC(2,6) RC(2,5) RC(2,4)
                        RC(3,0) RC(3,1) RC(3,2)    RC(3,5) RC(3,6) RC(3,7)         
        >;
    };


    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        diode-direction = "col2row"; 
        row-gpios
            = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    leds: leds {
        compatible = "pwm-leds";
        red_led: led_r {
            pwms = <&pwm0 2>;
            label = "Red LED";
        };
        green_led: led_g {
            pwms = <&pwm0 3>;
            label = "Green LED";
        };
        blue_led: led_b {
            pwms = <&pwm0 28>;
            label = "Blue LED";
        };
    };

    led-widgets {
        compatible = "zmk,led-widgets";
        boot {
            boot {
                priority = <100>;
                blue { len-ms = <100>; brightness = <0 0 50>; };
                off { len-ms = <100>; };
                blue2 { len-ms = <100>; brightness = <0 0 50>; };
            };
        };
        output {
            usb {
                arg = <0>;
                priority = <100>;
                stat { len-ms = <200>; brightness = <0 75 0>; };
            };
            ble {
                arg = <1>;
                priority = <100>;
                stat { len-ms = <200>; brightness = <0 0 100>; };
            };
        };
        profile {
            0 {
                arg = <0>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <100 0 0>; };
            };
            1 {
                arg = <1>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <0 100 0>; };
            };
            2 {
                arg = <2>;
                priority = <90>;
                head { len-ms = <50>; brightness = <0 0 50>; };
                off { len-ms = <150>; };
                tail { len-ms = <100>; brightness = <0 0 100>; };
            };
        };
    };


};

&pwm0 {
    status = "okay";
    ch0-pin = <2>; /* LED 0 */
    ch1-pin = <3>; /* LED 1 */
    ch2-pin = <28>; /* LED 2 */
};
