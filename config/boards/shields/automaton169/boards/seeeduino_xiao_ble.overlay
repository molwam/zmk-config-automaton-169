#include <dt-bindings/led/led.h>

&pwm0 {
    status = "okay";
    ch0-pin = <0>; /* LED 0 */
    ch1-pin = <1>; /* LED 1 */
    ch2-pin = <2>; /* LED 2 */
};

/ {
    backlight: pwmleds {
        compatible = "pwm-leds";
        label = "Backlight LEDs";
        pwm_led_0 {
            pwms = <&pwm0 0>; /* LED 0 */
        };
        pwm_led_1 {
            pwms = <&pwm0 1>; /* LED 1 */
        };
        pwm_led_2 {
            pwms = <&pwm0 2>; /* LED 2 */
        };
    };
};


/ {
	chosen {
		 zmk,backlight = &backlight;
	};
};